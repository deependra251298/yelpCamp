<% layout('layouts/boilerplate') %>
<div id="cluster-map"></div>
    <h1> All Campgrounds</h1>
    <div class="d-grid gap-2 col-6 mx-auto">
        <a href="/campgrounds/new" class="btn btn-primary btn-lg m-3">Add Campground</a>
    </div>
    <!-- <div class="row"> -->
        <% for (let campground of campgrounds){%>
            <div class="card mb-3" style="display:flex; flex-direction:row" >
                <div class="col-6 mt-1">
                    <% if(campground.images.length){ %>
                    <img class="img-fluid" alt="" src="<%= campground.images[0].url %>">
                    <% } else { %> 
                        <img class="img-fluid" alt="" src="https://res.cloudinary.com/dwgxusgug/image/upload/v1697812675/YelpCamp/i0o6nlslve42k079ccuy.png">
                        <% } %>
                </div>
                <div class="col-6">
                    <div class="card-body">
                        <h5 class="card-title"><%=campground.title %></h5>
                        <p class="card-text"><%= campground.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= campground.location %></small>
                        </p>
                        <a href="/campgrounds/<%= campground._id%>" class="btn btn-primary">View <%= campground.title%></a>
                    </div>
                </div>

            </div>
            <%  }%>
